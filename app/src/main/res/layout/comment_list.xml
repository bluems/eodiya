    android:layout_height="match_parent">

    <TextView
        android:id="@+id/commenter"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:height="60dp" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:height="60dp" />

</LinearLayout>